<!--pages/login/login.wxml-->

<view class="weui-cells__title">用户登录</view>

<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">用户名：</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" name="userName" placeholder="请输入用户名" bindinput='userNameInput'/>
    </view>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">密码：</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" name="password" placeholder="请输入密码" bindinput='passwordInput' password='true' />
    </view>
  </view>
