/**DropDownMenu**/ 
  
/*总菜单容器*/ 
  
.menu { 
 display: block; 
 height: 28px; 
 position: relative; 
} 
  
/*一级菜单*/ 
  
.menu dt { 
 font-size: 13px; 
 float: left; 
 /*hack*/ 
 width: 24.7%; 
 height: 20px; 
 border-right: 1px solid #d2d2d2; 
 border-bottom: 1px solid #d2d2d2; 
 text-align: center; 
 background-color: #f4f4f4; 
 color: #5a5a5a; 
 line-height: 20px; 
 z-index: 9; 
 display: flex;
} 

.dtmenu{
  display: flex;
  width:20px;
  height: 20px;
  float: right;
 
}
  
/*二级菜单外部容器样式*/ 
  
.menu dd { 
 position: absolute; 
 width: 100%; 
 margin-top: 30px; 
 left: 0; 
 z-index: 99; 
} 
  
/*二级菜单普通样式*/ 
  
.menu li { 
 font-size: 14px; 
 line-height: 34px; 
 color: #575757; 
 height: 34px; 
 display: block; 
 padding-left: 8px; 
 background-color: #fff; 
 border-bottom: 1px solid #dbdbdb; 
} 
  
/* 显示与隐藏 */ 
  
.show { 
 /*display: block;*/ 
 visibility: visible; 
} 
  
.hidden { 
 /*display: none;*/ 
 visibility: hidden; 
} 